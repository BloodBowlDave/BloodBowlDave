<MudItem>
    <MudPaper>
        <h5>Daunt<u>l</u>ess</h5>
        
        <MudNumericField T="int" Min="2" Max="6" @bind-Value="_roll" Disabled="Disabled"/>
        <MudButton Variant="Variant.Outlined" OnClick="AddAction" Disabled="Disabled">Add</MudButton>
    </MudPaper>
</MudItem>

@code {

    private int _roll = 2;
    
    [Parameter]
    public EventCallback<Action> OnAddAction { get; set; }
        
    [Parameter]
    public bool Disabled { get; set; }

    private void AddAction()
    {
        OnAddAction.InvokeAsync(new ActionCalculator.Models.Actions.Dauntless(_roll, true, false));
    }
}